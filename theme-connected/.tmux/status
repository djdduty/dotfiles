# Erase default options

set-option -g status-position bottom
setw -g window-status-format "#[fg=colour2,noreverse]#[fg=colour3,bg=colour2,noreverse] #I #W  #[fg=default,noreverse]"
setw -g window-status-current-format "#[fg=colour10]#[fg=colour15,bg=colour10] #I #[bg=colour10] #W  #[fg=default,noreverse]"
set -g status-left ''
set -g status-right ''
set -g status-justify right
set-option -g pane-active-border-bg default
set-option -g pane-active-border-fg colour8
set -g status-bg default
